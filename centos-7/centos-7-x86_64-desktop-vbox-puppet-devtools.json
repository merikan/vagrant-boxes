{
  "min_packer_version": "0.8.0",
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}"
  },
  "builders": [
    {
      "name": "centos-7-x86_64-desktop-vbox-puppet-devtools-{{user `build_version`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.nsc.liu.se/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
      "iso_checksum": "7cf1ac8da13f54d6be41e3ccf228dc5bb35792f515642755ff4780d5714d4278",
      "iso_checksum_type": "sha256",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "disk_size": 204800,
      "http_directory": "http",
      "boot_command": ["<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"],
      "boot_wait": "10s",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "90m",
      "shutdown_command": "echo 'vagrant'| sudo -S /sbin/poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "480"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/dev-tools.sh",
        "scripts/info.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "./builds/{{.BuildName}}.box"
    }
  ]
}
